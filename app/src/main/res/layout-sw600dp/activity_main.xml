<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:configChanges="orientation|screenSize"
    android:layout_height="match_parent" android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp" android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal" android:orientation="horizontal"
    android:showDividers="middle" tools:context=".PlaceListActivity"
    android:background="#ff313131">


    <fragment android:id="@+id/place_list"
        android:name="com.example.danie_000.locationproject.view.MainFragment"
        android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"
        tools:layout="@android:layout/list_content" />

    <fragment android:id="@+id/place_detail"
        android:name="com.example.danie_000.locationproject.view.PlaceMapFragment"
        android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="5"
        tools:layout="@layout/fragment_place_map" />

</LinearLayout>
